{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "cmd /c npx",
			"args": ["-y", "task-master-ai"]
		},
		"zen": {
			"type": "stdio",
			"command": "path/to/zen-mcp-server/.zen_venv/Scripts/python.exe",
			"args": ["path/to/zen-mcp-server/server.py"],
			"env": {
				"DEFAULT_MODEL": "auto",
				"DEFAULT_THINKING_MODE_THINKDEEP": "high",
				"CONVERSATION_TIMEOUT_HOURS": "24",
				"MAX_CONVERSATION_TURNS": "40",
				"LOG_LEVEL": "DEBUG",
				"DISABLED_TOOLS": "analyze,refactor,testgen,secaudit,docgen,tracer",
				"ZEN_MCP_FORCE_ENV_OVERRIDE": "false",
				"COMPOSE_PROJECT_NAME": "zen-mcp",
				"TZ": "UTC",
				"LOG_MAX_SIZE": "10MB"
			}
		},
		"oraios/serena": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"serena==latest",
				"--context",
				"agent"
			],
			"gallery": "https://api.mcp.github.com/2025-09-15/v0/servers/0658e342-7ae7-493a-b378-a324363ee322",
			"version": "1.0.0"
		}
	}
}
